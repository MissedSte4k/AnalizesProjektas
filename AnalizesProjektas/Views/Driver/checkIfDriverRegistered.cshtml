            <dd>
                @Html.DisplayFor(model => model.driver.MasinosTipas)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.driver.Vardas)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.driver.Vardas)
            </dd>
        </dl>



    }
    @if (Model.gateTime == null)
    {
        <a asp-action="EditDriverForm" asp-route-id="@Model.ShipmentId">EditDriver</a>
        <a asp-action="ReggisterArrival" asp-route-id="@Model.ShipmentId">ReggisterArrival</a>
    }
    else
    {
        <a asp-action="ReggisterDelay" asp-route-id="@Model.ShipmentId">ReggisterDelay</a>
    }
    }
