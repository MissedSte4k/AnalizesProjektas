<div>
    @if (Model.supplier != null)
    {
    @if (Model.driver == null)
    {
        <a asp-action="DriverForm" asp-route-id="@Model.ShipmentId">DriverForm</a>
    }
    else
    {
        <h4>Driver info</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.driver.MasinosBusena)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.driver.MasinosBusena)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.driver.MasinosModelis)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.driver.MasinosModelis)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.driver.MasinosNr)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.driver.MasinosNr)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.driver.MasinosTipas)
