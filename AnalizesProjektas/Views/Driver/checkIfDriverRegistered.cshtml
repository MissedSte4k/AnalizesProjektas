<div>
    @if (Model.driver == null)
    {
        <a asp-action="DriverForm" asp-route-id="@Model.ShipmentId">DriverForm</a>
    }
    else if (Model.gateTime == null)
    {
        <a asp-action="EditDriver" asp-route-id="@Model.ShipmentId">EditDriver</a>
        <a asp-action="ReggisterArrival" asp-route-id="@Model.ShipmentId">ReggisterArrival</a>
    }
    else
    {
        <a asp-action="ReggisterDelay" asp-route-id="@Model.ShipmentId">ReggisterDelay</a>
    }
</div>
