@model AnalizesProjektas.Models.Driver

@{
    ViewData["Title"] = "EditDriverForm";
}

<h2>EditDriverForm</h2>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SubmitDriverUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DriverId" />
            <div class="form-group">
                <label asp-for="Vardas" class="control-label"></label>
                <input asp-for="Vardas" class="form-control" />
                <span asp-validation-for="Vardas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasinosNr" class="control-label"></label>
                <input asp-for="MasinosNr" class="form-control" />
                <span asp-validation-for="MasinosNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasinosModelis" class="control-label"></label>
                <input asp-for="MasinosModelis" class="form-control" />
                <span asp-validation-for="MasinosModelis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MasinosTipas" class="control-label"></label>
                <select asp-items="@Html.GetEnumSelectList(typeof(CarType))" class="form-control"></select>
                <span asp-validation-for="MasinosTipas" class="text-danger"></span>
                <input class="form-control" asp-for="DriverId" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="checkIfDriverRegistered" asp-route-id="DriverId">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
