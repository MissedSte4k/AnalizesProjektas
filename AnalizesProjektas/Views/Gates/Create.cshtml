@model AnalizesProjektas.Models.Gate

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Gate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.DropDownListFor(x => Model.WareHouse, new SelectList(ViewBag.Warehouses, "WareHouseId", "InternalAddress"), "Select Warehouse")
            </div>
            <div class="form-group">
                <select asp-for="TransportType" asp-items="Html.GetEnumSelectList<CarType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Vieta" class="control-label"></label>
                <input asp-for="Vieta" class="form-control" />
                <span asp-validation-for="Vieta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
